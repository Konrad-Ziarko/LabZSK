<Window x:Class="LabZktServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabZktServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox_Pass" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="hasło" FontFamily="Tahoma"/>
        <Button x:Name="button_Start" Content="Nasłuchuj" HorizontalAlignment="Left" Margin="229,10,0,0" VerticalAlignment="Top" Width="80" ToolTip="Uruchom serwer" Click="button_Click" FontFamily="Tahoma" Height="30"/>
        <TextBox x:Name="textBox_Addres" Height="30" Margin="0,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Adres serwera" IsEnabled="False" HorizontalAlignment="Right" Width="120" FontFamily="Tahoma"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Margin="10,54,0,10" Width="163" SelectionChanged="listView_SelectionChanged" FontFamily="Tahoma">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <RichTextBox x:Name="richTextBox" Margin="192,54,10,10" FontFamily="Tahoma">
            <FlowDocument/>
        </RichTextBox>
        <TextBox x:Name="textBox_Port" HorizontalAlignment="Left" Height="30" Margin="140,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" ToolTip="Port" FontFamily="Tahoma"/>
        <Button x:Name="button_Start_Copy" Content="client" HorizontalAlignment="Left" Margin="321,10,0,0" VerticalAlignment="Top" Width="54" ToolTip="Uruchom serwer" Click="button_Start_Copy_Click" FontFamily="Tahoma" Height="30"/>

    </Grid>
</Window>
